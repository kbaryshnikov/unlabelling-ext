{
  "name": "inoblock",
  "version": "1.0.0",
  "description": "\"Inoagent\" messages blocker",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["browser-polyfill.min.js", "background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "js": ["browser-polyfill.min.js", "content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}